{
    "name": "mcp-servers",
    "version": "1.0.0",
    "description": "MCP servers for Google Cloud services (BigQuery, Google Ads) and Meta Ads",
    "type": "module",
    "scripts": {
        "build": "cd packages/shared && npm run build && cd ../bigquery && npm run build && cd ../google-ads && npm run build && cd ../meta-ads && npm run build",
        "build:shared": "cd packages/shared && npm run build",
        "build:bigquery": "cd packages/bigquery && npm run build",
        "build:google-ads": "cd packages/google-ads && npm run build",
        "build:meta-ads": "cd packages/meta-ads && npm run build",
        "start:bigquery": "cd packages/bigquery && npm start",
        "start:google-ads": "cd packages/google-ads && npm start",
        "start:meta-ads": "cd packages/meta-ads && npm start",
        "start:bigquery:stdio": "cd packages/bigquery && npm run start:stdio",
        "start:bigquery:http": "cd packages/bigquery && npm run start:http",
        "start:google-ads:stdio": "cd packages/google-ads && npm run start:stdio",
        "start:google-ads:http": "cd packages/google-ads && npm run start:http",
        "start:meta-ads:stdio": "cd packages/meta-ads && npm run start:stdio",
        "start:meta-ads:http": "cd packages/meta-ads && npm run start:http",
        "dev:bigquery": "cd packages/bigquery && npm run dev",
        "dev:google-ads": "cd packages/google-ads && npm run dev",
        "dev:meta-ads": "cd packages/meta-ads && npm run dev",
        "dev:bigquery:http": "cd packages/bigquery && npm run dev:http",
        "dev:google-ads:http": "cd packages/google-ads && npm run dev:http",
        "dev:meta-ads:http": "cd packages/meta-ads && npm run dev:http",
        "install:all": "cd packages/shared && npm install && cd ../bigquery && npm install && cd ../google-ads && npm install && cd ../meta-ads && npm install"
    },
    "keywords": [
        "mcp",
        "bigquery",
        "google-ads",
        "meta-ads",
        "facebook-ads",
        "google-cloud",
        "model-context-protocol"
    ],
    "author": "",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "tsx": "^4.6.0",
        "typescript": "^5.3.0"
    },
    "dependencies": {
        "dotenv": "^16.5.0",
        "facebook-nodejs-business-sdk": "^22.0.3",
        "zod": "^3.25.63"
    }
}
